# Application
DOPPELGANGER_DEBUG=true
DOPPELGANGER_HOST=0.0.0.0
DOPPELGANGER_PORT=8000
DOPPELGANGER_ALLOWED_ORIGINS=["*"]

# Database
DOPPELGANGER_DATABASE__HOST=localhost
DOPPELGANGER_DATABASE__PORT=5432
DOPPELGANGER_DATABASE__USER=doppelganger
DOPPELGANGER_DATABASE__PASSWORD=doppelganger
DOPPELGANGER_DATABASE__NAME=doppelganger
DOPPELGANGER_DATABASE__POOL_SIZE=5
DOPPELGANGER_DATABASE__POOL_MAX_OVERFLOW=10

# Shared TTS
DOPPELGANGER_VOICES_DIR=voices
DOPPELGANGER_CACHE_MAX_SIZE=100

# Chatterbox TTS
DOPPELGANGER_CHATTERBOX__DEVICE=cuda
DOPPELGANGER_CHATTERBOX__EXAGGERATION=0.3
DOPPELGANGER_CHATTERBOX__CFG_WEIGHT=3.0
DOPPELGANGER_CHATTERBOX__TEMPERATURE=0.75
DOPPELGANGER_CHATTERBOX__CHUNK_SIZE=50

# Orpheus TTS
DOPPELGANGER_ORPHEUS__ENABLED=true
DOPPELGANGER_ORPHEUS__VLLM_BASE_URL=http://localhost:8001/v1
HUGGING_FACE_HUB_TOKEN=

